{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["renovatebot"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "packageRules": [
    {
      "matchPackagePatterns": [".*fedora.*"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "automerge": true,
      "ignoreTests": true    
    },
    {
      "excludePackagePatterns": [".*fedora.*"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "ignoreTests": true
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "ignoreTests": true,
      "pinDigests": true     
    },
    {
      "matchPaths": ["bazarr/**"],
      "automerge": false
    }
  ],
  "docker": {
    "digest": {
      "enabled": true
    }
  },
  "ignorePaths": ["transmission/**","mosquitto/**","home-assistant/**"]
}