{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["renovatebot"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "ignoreTests": true,
      "pinDigests": true
    },
    {
      "matchPaths": ["bazarr/**"],
      "automerge": false
    }
  ],
  "ignorePaths": ["transmission/**","mosquitto/**","home-assistant/**","fedora-minimal/**"]
}